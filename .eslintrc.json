{
	"env": {
		"es2021": true
	},
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
	"plugins": [
		"cypress",
    "unused-imports"
	],
	"rules": {
		"indent": [
				"error",
				2
		],
		"key-spacing": [
			"error",
			{
					"afterColon": true,
					"beforeColon": false
			}
		],
		"no-multi-spaces": [
			"error",
			{
					"ignoreEOLComments": false
			}
		],
    "no-unused-vars": [
      "error",
      {
        "vars": "all"
      }
    ],
    "semi": [2, "always"],
    "unused-imports/no-unused-imports": "error"
	}
}